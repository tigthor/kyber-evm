{
  "name": "@kyve/evm",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:binaries": "yarn build && rimraf out && pkg package.json",
    "start": "node ./dist/src/index.js",
    "format": "prettier --write ."
  },
  "bin": "./dist/src/index.js",
  "pkg": {
    "scripts": "./dist/src/index.js",
    "assets": "./node_modules/@kyve/sdk-test/dist/proto/*",
    "targets": [
      "latest-linux-x64",
      "latest-macos-x64",
      "latest-win-x64"
    ],
    "outputPath": "out"
  },
  "dependencies": {
    "@kyve/core": "^1.0.1",
    "ethers": "^5.5.3"
  },
  "devDependencies": {
    "@types/node": "^17.0.10",
    "pkg": "^5.5.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tslog": "^3.3.1",
    "typescript": "^4.5.4",
    "webhook-discord": "^3.7.8"
  }
}
